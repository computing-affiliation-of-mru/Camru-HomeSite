  .hero
    #eventShowcase.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#eventShowcase' data-slide-to='0')
        li(data-target='#eventShowcase' data-slide-to='1')
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100.showcaseImg( src='images/hero_1.jpg' alt='First slide')
        .carousel-item
          img.d-block.w-100.showcaseImg(src='images/hero_3.jpg' alt='Second slide')
      a.carousel-control-prev(href='#eventShowcase' role='button' data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#eventShowcase' role='button' data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
